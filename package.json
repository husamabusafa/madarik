{
  "name": "madarik",
  "version": "1.0.0",
  "description": "Madarik Real Estate Platform - Full Stack Application",
  "private": true,
  "scripts": {
    "dev": "./start-dev.sh",
    "dev:windows": "start-dev.bat",
    "server:dev": "cd server && npm run start:dev",
    "server:start": "cd server && npm run start:prod",
    "server:build": "cd server && npm run build",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install:all": "cd server && npm install && cd ../client && npm install",
    "build:all": "npm run server:build && npm run client:build",
    "db:generate": "cd server && npm run db:generate",
    "db:push": "cd server && npm run db:push",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "db:studio": "cd server && npm run db:studio",
    "setup": "npm run install:all && npm run db:generate && npm run db:push && npm run db:seed"
  },

  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "real-estate",
    "nestjs",
    "react",
    "typescript",
    "prisma",
    "full-stack"
  ],
  "author": "Madarik Team",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/husamabusafa/madarik.git"
  },
  "bugs": {
    "url": "https://github.com/husamabusafa/madarik/issues"
  },
  "homepage": "https://github.com/husamabusafa/madarik#readme"
}
