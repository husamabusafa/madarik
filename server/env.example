# Database
DATABASE_URL="postgresql://username:password@localhost:5432/madarik_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3100
NODE_ENV="development"

# CORS
CLIENT_URL="http://localhost:5100"

# Email Configuration (Resend)
RESEND_API_KEY="re_********************************"
FROM_EMAIL="noreply@madarik.com"
FROM_NAME="Madarik Real Estate"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR="uploads"

# Rate Limiting
RATE_LIMIT_TTL=900  # 15 minutes in seconds
RATE_LIMIT_LIMIT=100  # requests per TTL

# Lead Rate Limiting
LEAD_RATE_LIMIT_TTL=86400  # 24 hours in seconds
LEAD_RATE_LIMIT_LIMIT=3  # leads per IP per listing per TTL

# Site Settings
DEFAULT_CURRENCY="USD"
DEFAULT_COUNTRY="United States"
DEFAULT_CITY="New York"

# Map & Geocoding (choose one)
# Google Maps
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Or Mapbox (alternative)
# MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET="your-cookie-secret-change-this"

# Invite Token Expiry
INVITE_EXPIRES_HOURS=168  # 7 days